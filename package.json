{
  "name": "mice",
  "displayName": "Mice",
  "version": "0.1.1",
  "description": "Open a hailing frequency via WebRTC for input sharing, mainly for remote video controlling.",
  "author": "L",
  "manifest": {
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*"
    ]
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "web": "run-s web:*",
    "web:clean": "rimraf docs",
    "web:build": "parcel build .plasmo/static/options/index.html --dist-dir docs --no-source-maps --cache-dir .plasmo/cache/parcel-web --public-url https://plasmohq.github.io/mice/"
  },
  "dependencies": {
    "@plasmohq/storage": "0.12.2",
    "mnemonic-id": "3.2.7",
    "plasmo": "0.58.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "simple-peer": "9.11.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.5.4",
    "@plasmohq/storage": "0.12.2",
    "@types/chrome": "0.0.200",
    "@types/node": "18.11.7",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/simple-peer": "9.11.5",
    "buffer": "6.0.3",
    "events": "3.3.0",
    "parcel": "2.7.0",
    "prettier": "2.7.1",
    "process": "0.11.10",
    "rimraf": "3.0.2",
    "typescript": "4.8.4"
  }
}
